<h1>Listing clothings</h1>

<table>
  <thead>
    <tr>
      <th>Size</th>
      <th>Uid</th>
      <th>Brand</th>
      <th>Color</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clothings.each do |clothing| %>
      <tr>
        <td><%= clothing.size %></td>
        <td><%= clothing.uid %></td>
        <td><%= clothing.brand %></td>
        <td><%= clothing.color %></td>
        <td><%= link_to 'Show', clothing %></td>
        <td><%= link_to 'Edit', edit_clothing_path(clothing) %></td>
        <td><%= link_to 'Destroy', clothing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

